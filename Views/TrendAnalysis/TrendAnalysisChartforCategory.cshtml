@model Inventory_Management_System.ViewModels.TrendAnalysisChartViewModel;
@{ var cat = Model.category;
    var data = Model.data;

    ViewData["Title"] = "TrendAnalysisChartforCategory"; }

@section scripts{

    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://code.highcharts.com/modules/export-data.js"></script>
    <script src="https://code.highcharts.com/modules/accessibility.js"></script>

    <script>
            $(function () {
                GenerateChartForDepartment();
            });



        function GenerateChartForDepartment() {
            var model = @Html.Raw(Json.Serialize(Model));

                $.ajax({
                    cache: false,
                    url: '@Url.Action("GetDataForChartByDepartment", "TrendAnalysis")',
                    //type: "Post",
                    data: {  },
                    beforeSend: function () {

                    },
                    success: function (result) {

                        // Create the chart
                        Highcharts.chart('data_chart', {
                              chart: {
                                type: 'bar'
                              },
                              title: {
                                text: 'Stacked bar chart'
                              },
                            xAxis: {
                                categories: model.category
                              },
                              yAxis: {
                                min: 0,
                                title: {
                                  text: 'Quantity Ordered '
                                }
                              },
                              legend: {
                                reversed: false
                              },
                              plotOptions: {
                                series: {
                                  stacking: 'normal'
                                }
                            },
                            series: model.data
                            });

             },
                complete: function () {

                }
            });
            }
    </script>

    <style>
        .highcharts-figure, .highcharts-data-table table {
            min-width: 310px;
            max-width: 800px;
            margin: 1em auto;
        }

        #container {
            height: 800px;
        }

        .highcharts-data-table table {
            font-family: Verdana, sans-serif;
            border-collapse: collapse;
            border: 1px solid #EBEBEB;
            margin: 10px auto;
            text-align: center;
            width: 100%;
            max-width: 500px;
        }

        .highcharts-data-table caption {
            padding: 1em 0;
            font-size: 1.2em;
            color: #555;
        }

        .highcharts-data-table th {
            font-weight: 600;
            padding: 0.5em;
        }

        .highcharts-data-table td, .highcharts-data-table th, .highcharts-data-table caption {
            padding: 0.5em;
        }

        .highcharts-data-table thead tr, .highcharts-data-table tr:nth-child(even) {
            background: #f8f8f8;
        }

        .highcharts-data-table tr:hover {
            background: #f1f7ff;
        }
    </style>
    <h1>Statistics on Stationery Order (By Category)</h1>
    <div class="container">

        <div id="data_chart">

        </div>

    </div>



}
